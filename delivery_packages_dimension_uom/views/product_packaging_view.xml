<odoo>

<record model="ir.ui.view" id="stock_package_type_form">
	<field name="name">stock.package.type.form.inherit</field>
	<field name="model">stock.package.type</field>
	<field name="inherit_id" ref="stock.stock_package_type_form"/>
	<field name="arch" type="xml">
			<xpath expr="//group[@name='delivery']/group/div[@name='size']/span/field[@name='length_uom_name']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
			<xpath expr="//group[@name='delivery']/group/div[@name='size']/span[last()]" position="after">
				<span><field name="package_dimension_uom_name"/></span>
            </xpath>
	</field>
</record>
</odoo>